package arraysHomework;

public class Task01 {
	public static void main(String[] args) {

		int[] arr = { 10, 3, 5, 8, 6, -3, 7 };
		int min = Integer.MAX_VALUE;

		for (int i = 0; i < arr.length; i++) {
			if (arr[i] % 3 == 0 && arr[i] < min) {
				min = arr[i];
			}
		}

		if (min == Integer.MAX_VALUE) {
			System.out.println("Array do not contain number dividable by 3");
		} else {
			System.out.println("Minimal number dividable by 3");
		}

	}
}
