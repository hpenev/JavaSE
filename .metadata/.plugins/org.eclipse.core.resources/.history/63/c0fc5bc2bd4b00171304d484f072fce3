package arraysHomework;

import java.util.Scanner;

public class Task10 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int[] array = new int[7];
		for (int i = 0; i < array.length; i++) {
			System.out.print("Enter a number: ");
			array[i] = sc.nextInt();
		}
		sc.close();

		int valueInMiddleCell = array[array.length / 2];
		System.out.println("Middle value: " + valueInMiddleCell);

		System.out.println("Nearest value" + valueInMiddleCell);
	}
}
