package loopsExercises;

import java.util.Scanner;

public class Task11 {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();

		double oddSum = 0;
		double oddMin = Double.MAX_VALUE;
		double oddMax = Double.MIN_VALUE;
		double evenSum = 0;
		double evenMin = Double.MAX_VALUE;
		double evenMax = Double.MIN_VALUE;

		for (int i = 1; i <= n; i++) {
			double currentNumber = sc.nextDouble();

			if (i % 2 == 0) {
				evenSum += currentNumber;

				if (currentNumber > evenMax) {
					evenMax = currentNumber;
				}

				if (currentNumber < evenMin) {
					evenMin = currentNumber;
				}
			}

			if (i % 2 != 0) {
				oddSum += currentNumber;

				if (currentNumber > oddMax) {
					oddMax = currentNumber;
				}

				if (currentNumber < oddMin) {
					oddMin = currentNumber;
				}
			}

		}

		System.out.printf("Oddsum = %d\n", oddSum);
		System.out.printf("OddMin = %d\n", oddMin);
		System.out.printf("OddMax = %d\n", oddMax);
		System.out.printf("EvenSum = %d\n", evenSum);
		System.out.printf("EvenMin = %d\n", evenMin);
		System.out.printf("EvenMax = %d\n", evenMax);

		sc.close();
	}
}
