package loopsExercises;

import java.util.Scanner;

public class Task09 {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		String str = sc.nextLine();

		int sum = 0;
		for (int i = 0; i < str.length(); i++) {
			char currentChar = str.charAt(i);

			switch (currentChar) {
			case 'a':
sum+=1;
				break;

			default:
				break;
			}
		}
		sc.close();
	}
}
