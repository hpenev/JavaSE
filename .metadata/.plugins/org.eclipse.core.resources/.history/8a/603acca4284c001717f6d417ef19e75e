package arraysHomework;

import java.util.Arrays;

public class Task16 {
	public static void main(String[] args) {
		double[] array = { -1.12, -2.43, 3.1, 4.2, 0, 6.4, -7.5, 8.6, 9.1, -4 };

		System.out.println(Arrays.toString(array));
		// check how many items meet the conditions
		int count = 0;
		for (int i = 0; i < array.length; i++) {
			if (array[i] < -0.231) {
				double num = ((i + 1) * (i + 1)) + 41.25;

				if (num > 0) {
					count++;
				}

			} else {
				double num = (i + 1) * array[i];
				if (num > 0) {
					count++;
				}
			}
		}

		// create new array to store values
		double[] newArray = new double[count];

		int index = 0;
		for (int i = 0; i < array.length; i++) {
			if (array[i] < -0.231) {
				double num = ((i + 1) * (i + 1)) + 41.25;

				if (num > 0) {
					newArray[index] = num;
					index++;
				}

			} else {
				double num = (i + 1) * array[i];
				if (num > 0) {
					newArray[index] = num;
					index++;
				}
			}
		}

		System.out.println(Arrays.toString(newArray));

	}
}
