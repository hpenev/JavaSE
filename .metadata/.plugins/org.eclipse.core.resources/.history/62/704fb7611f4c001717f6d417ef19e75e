package arraysHomework;

import java.util.Arrays;

public class Task15 {
	public static void main(String[] args) {
		// Scanner sc = new Scanner(System.in);
		// System.out.print("Enter array length: ");
		// int arrayLength = sc.nextInt();
		//
		// double[] array = new double[arrayLength];
		// for (int i = 0; i < arrayLength; i++) {
		// System.out.print("Enter a number: ");
		// array[i] = sc.nextInt();
		// }
		// sc.close();

		double[] array = { 7.13, 0.2, 4.9, 5.1, 6.34, 1.12 };

		double[] maxNumbers = new double[3];

		for (int i = 0; i < array.length; i++) {

			double minNum = Double.MAX_VALUE;
			int pos = 0;

			for (int j = 0; j < maxNumbers.length - 1; j++) {
				if (maxNumbers[j] < maxNumbers[j + 1]) {
					double temp = maxNumbers[j];
					minNum = maxNumbers[j];
					pos = j;
				}
			}

			if (array[i] > maxNumbers[pos]) {
				maxNumbers[pos] = array[i];
			}
		}

		System.out.println(Arrays.toString(maxNumbers));

	}
}
