package loopsBookChapter16;

public class Task06_v1 {
public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	System.out.println("Въведете ден: ");
	int day = sc.nextInt();
	System.out.println("Въведете месец: ");
	int month = sc.nextInt();
	System.out.println("Въведете година: ");
	int year = sc.nextInt();
	boolean leapYar = (year % 4 == 0 && (year % 400
	== 0 || year % 100 != 0));// дали годината е високосна
	// валидация на данните:
	boolean correctData = true;
	if (day < 0 || day > 31) {
	correctData = false;
	} else if (month < 0 || month > 12) {
	correctData = false;
	} else if (year < 0) {
	correctData = false;
	} else if (day == 29 && month == 2 && !leapYar)
	{
	correctData = false;
	}
	if (day == 28 && month == 2) {// при 28 февруари
	// проверяваме дали годината е високосна
	if (leapYar) {
	day++;// при високосна година имаме
	29-ти февруари
	} else {// в противен случай - 1-ви март.
	day = 1;
	month++;
	}
	} else
	// ако въведената дата е 29.02. и годината е ви-
	сокосна, правим датата на 1-ви март
	if (day == 29 && month == 2 && leapYar) {
}
}
