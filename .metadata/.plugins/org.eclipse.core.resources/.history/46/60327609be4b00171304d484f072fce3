package arraysHomework;

import java.util.Scanner;

public class Task10 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int[] array = new int[7];
		for (int i = 0; i < array.length; i++) {
			System.out.print("Enter a number: ");
			array[i] = sc.nextInt();
		}
		sc.close();

		int valueInMiddleCell = array[array.length / 2];
		System.out.println("Middle value: " + valueInMiddleCell);

		int nerestValue = array[0];

		for (int i = 0; i < array.length; i++) {
			int currentValue = array[i];
			if (currentValue - valueInMiddleCell < nerestValue - valueInMiddleCell) {
				nerestValue = currentValue;
			}
		}
		System.out.println("Nearest value" + valueInMiddleCell);
	}
}
