package arraysHomework;

import java.util.Scanner;

public class Task13 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter a number: ");
		int number = sc.nextInt();
		sc.close();

		int[] binaryNumber = new int[32];

		for (int i = 0; i < 32; i++) {
			int bit = (number >> i) & 1;
			
			binaryNumber[i]= bit;
		}
	}
}
